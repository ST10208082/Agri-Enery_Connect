@page
@model Agri_Enery_Connect.Areas.Identity.Pages.FarmerProducts.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.min.js"></script>

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <!-- View Products Section -->
        <div class="col-md-6">
            <div class="scrollview" style="max-height: 400px; overflow-y: auto; border: 1px solid #ccc; padding: 10px;">
                @if (Model.Products != null && Model.Products.Any())
                {
                    <ul class="list-group">
                        @foreach (var product in Model.Products)
                        {
                            <li class="list-group-item">
                                <strong>@product.ProductName</strong><br />
                                Category: @product.CategoryID<br />
                                Production Date: @product.ProductionDate.ToShortDateString()
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>No products found.</p>
                }
            </div>
        </div>
        <!-- Add Product Section -->
        <div class="col-md-6">
            <h2>Add New Product</h2>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="NewProduct.ProductName"></label>
                    <input asp-for="NewProduct.ProductName" class="form-control" />
                    <span asp-validation-for="NewProduct.ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewProduct.CategoryID"></label>
                    <input asp-for="NewProduct.CategoryID" class="form-control" />
                    <span asp-validation-for="NewProduct.CategoryID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewProduct.ProductionDate"></label>
                    <input asp-for="NewProduct.ProductionDate" class="form-control" />
                    <span asp-validation-for="NewProduct.ProductionDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Image">Image</label>
                    <input type="file" name="Image" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Add Product</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("form").submit(function (event) {
                event.preventDefault();

                var formData = new FormData(this);

                $.ajax({
                    url: "@Url.Page("./Index", "UploadFile")",
                    type: "POST",
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("File upload failed");
                    }
                });
            });
        });
    </script>
}
